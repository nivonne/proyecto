<div class="col-md-4 mx-auto">
<div class="card">
    <div class="card-header">
        <h3>Edit Note</h3>
    </div>
    <div class="card-body">
            <div class="input-group mb-3">
                <input type="text" name="title" class="form-control" placeholder="Title" value="{{note.title}}">
            </div>
            <div class="input-group mb-3">
                <textarea name="description" class="form-control" placeholder="Description">{{note.description}}</textarea>
            </div>
            <div class="input-group mb-3">
                <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="post">
                    <input type="hidden" name="_method" value="PUT">
                    <button class="btn btn-dark w-100"  type="submit">Save</button>
                </form>  
            </div>
    </div>
</div>
</div>

